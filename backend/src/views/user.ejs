<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js">
    <title>List-User</title>
</head>

<body>

    <div class="user-container">
        <div class="container">
            <form method="POST" action="/users/create-user">
                <div class="row">
                    <div class="mt-3">
                        <h3>Create new User</h3>
                    </div>
                    
                    <div class="col-6">
                        <label for="username" class="form-label">User Name</label>
                        <input type="text" name="username" class="form-control" id="username" required>
                    </div>
                    <div class="col-6"></div>
                    <div class="mb-3 col-6 mt-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" name="email" class="form-control" id="email" required>
                    </div>
                    <div class="col-6"></div>

                    <div class="mb-3 col-6">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" name="password" class="form-control" id="password" required>
                    </div>
                   
                    
                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                </div>
            </form>
            <div class="mt-5">
                <div class="fw-bold" role="alert">
                    <h2>List User</h2>
                </div>

            </div>

            <div class="mt-5">


                <table class="table table-light">

                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Username</th>
                            <th scope="col">Email</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% listUser.forEach(function(item,index){ %>
                            <tr>
                                <th scope="row">
                                    <%= index +1 %>
                                </th>
                                <td>
                                    <%= item.username %>
                                </td>
                                <td>
                                    <%= item.email %>
                                </td>
                                <td><a class="btn btn-outline-warning" href="/update-user/<%=item.id%>">
                                    Edit
                                </a>
                                    <form style="display: inline;" action="/delete-user/<%=item.id%>" method="POST">
                                        <button type="submit" class="btn btn-outline-danger">Delete</button>
                                    </form>
                                </td>

                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>